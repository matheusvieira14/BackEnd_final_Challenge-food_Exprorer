// learn more about it in the docs https//pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String 
  is_admin Boolean @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  orders Order[]
  favorites Favorite[]
}

model Category{
  id String @id @default(uuid())
  name String
  dishes Dish[]
}

model Ingredient{
  id String @id @default(uuid())
  name String
  dishes Dish[]
}

model Dish {
  id String @id @default(uuid())
  name String

  category_id String
  category Category @relation(fields: [category_id], references: [id])

  description String
  price Decimal
  ingredients Ingredient[]
  image String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  orders Order[]
  favorites Favorite[]
}

model Order {
  id String @id @default(uuid())
 
  user_id String
  user User @relation(fields: [user_id], references: [id])

  dishes Dish[]
  amount Decimal
  payment String
  status String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Favorite {
  id String @id @default(uuid())
  user_id String
  user User @relation(fields: [user_id], references: [id])

  dishes Dish[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}


